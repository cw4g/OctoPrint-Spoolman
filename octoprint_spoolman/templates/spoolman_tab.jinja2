<table class="table">
    <thead>
        <tr>
            <th scope="col" width="50%">Name</th>
            <th scope="col" width="15%">Vendor</th>
            <th scope="col" width="12%">Material</th>
            <th scope="col" width="10%">Weight</th>
            <th scope="col" width="13%">Action</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: spools">
    <tr>
        <!--style="display: flex"-->
        <th scope="row" style="display: flex">
            <span data-bind="style: { color: '#' + filament.color_hex }" role="img" class="anticon" style="font-size: 42px; margin-right: 0px;">
                {% include 'icon_spool.svg' %}
            </span>
            <span data-bind="text: filament.name, class: $parent.getActive() == id ? `text-success` : ``"></span>
        </th>
        <td data-bind="text: filament.vendor.name"></td>
        <td data-bind="text: filament.material"></td>
        <td data-bind="text: parseInt(remaining_weight) + 'g'"></td>
        <td>
            <!-- ko ifnot: $parent.getActive() == id -->
            <button class="btn btn-primary" data-bind="click: $parent.selected, attr: { id: id }">Select</button>
            <!-- /ko -->
            <!-- ko if: $parent.getActive() == id -->
            <button class="btn btn-danger" data-bind="click: $parent.clear, attr: { id: id }">Clear</button>
            <!-- /ko -->
        </td>
    </tr>
    </tbody>
</table>
<div class="pagination pagination-centered">
  <ul>
    <li data-bind="css: hasPrevious"><a data-bind="click: previous" href="#">&laquo;</a></li>
    <li><span data-bind="text: pageNumber"></span></li>
    <li data-bind="css: hasNext"><a data-bind="click: next" href="#">&raquo;</a></li>
  </ul>
</div>
